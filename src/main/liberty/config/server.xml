<?xml version="1.0" encoding="UTF-8"?>
<server description="new server">

    <featureManager>
        <feature>javaee-8.0</feature>
    </featureManager>

    <resourceAdapter id="wmqjmsra" location="/tmp/wmq.jmsra.rar" />

    <jmsConnectionFactory jndiName="jms/wmqCF" connectionManagerRef="ConMgr6">
        <properties.wmqjmsra
            channel="DEV.APP.SVRCONN"
            hostName="localhost"
            password="passw0rd"
            port="1414"
            queueManager="QM1"
            transportType="CLIENT"
            userName="app" />
    </jmsConnectionFactory>


    <connectionManager id="ConMgr6" maxPoolSize="2"/>

    <jmsActivationSpec id="libertymq/SampleListenerMDB">
        <properties.wmqjmsra
            channel="DEV.APP.SVRCONN"
            destinationRef="jms/queue1"
            destinationType="javax.jms.Queue"
            hostName="localhost"
            password="passw0rd"
            port="1414"
            queueManager="QM1"
            transportType="CLIENT"
            userName="app" />
	</jmsActivationSpec>

    <jmsQueue id="jms/queue1" jndiName="jms/wmqQ1">
        <properties.wmqjmsra 
            baseQueueName="DEV.QUEUE.1" 
            baseQueueManagerName="QM1"/>
    </jmsQueue>


    <basicRegistry id="basic" realm="BasicRealm" />

    <httpEndpoint id="defaultHttpEndpoint"
                  httpPort="9080"
                  httpsPort="9443"
                  host="*" />

    <applicationManager autoExpand="true"/>

    <webApplication contextRoot="/libertymq" location="libertymq.war" />

    <ssl id="defaultSSLConfig" trustDefaultCerts="true" />
</server>
